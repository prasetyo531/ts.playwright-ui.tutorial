{
    "compilerOptions": {
      "target": "ESNext",                // Specify ECMAScript target version
      "module": "CommonJS",              // Specify module code generation
      "strict": true,                    // Enable all strict type-checking options
      "esModuleInterop": true,           // Enables emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,              // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
      "outDir": "./dist",                // Redirect output structure to the 'dist' directory
      "rootDir": "./",                   // Specify the root directory of input files
      "types": ["@playwright/test", "node"]       // Include Playwright types for testing
    },
    "include": [
      "pages/**/*.ts",                   // Include all TypeScript files in the pages directory
      "helpers/**/*.ts",                 // Include all TypeScript files in the helpers directory
      "tests/**/*.ts"                    // Include all TypeScript test files
    ],
    "exclude": [
      "node_modules",                    // Exclude node_modules directory
      "**/*.spec.ts"                     // Exclude test files from compilation (if needed)
    ]
  }  