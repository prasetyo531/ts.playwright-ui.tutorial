{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@helpers/*": ["helpers/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["@playwright/test", "node"]
  },
  "include": ["pages/**/*.ts", "helpers/**/*.ts", "tests/**/*.ts", "eslint.config.mjs", "playwright.config.ts", "globalSetup.ts"],
  "exclude": ["node_modules"]
}
